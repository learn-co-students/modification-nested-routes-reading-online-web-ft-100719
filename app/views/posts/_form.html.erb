<%= form_for(@post) do |f| %>

  <label>Post title:</label><br>
  <%= f.text_field :title %><br><br>

  <label>Post Author:</label><br>
  <%= display_author_if_present(@post) %>
  <%= author_id_field(@post) %><br><br>
  

  <label>Post Description</label><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>
